<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:id="@+id/ll_ems"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_ems"
                android:layout_width="70dp"
                android:layout_height="70dp"

                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/tvs" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_ems"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="7dp"
                android:text="EMS" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_abs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_anti_lock_braking_sytem"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"

                android:src="@drawable/tvs" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_anti_lock_braking_sytem"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="9dp"


                android:text="ABS" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_ic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_ic"
                android:layout_width="70dp"
                android:layout_height="70dp"

                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/tvs" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_ic"
                android:layout_marginRight="8dp"
               android:layout_gravity="center"
                android:layout_marginTop="9dp"

                android:text="IC" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>